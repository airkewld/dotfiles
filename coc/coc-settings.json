{
	"languageserver": {
        "terraform": {
            "command": "terraform-lsp",
            "filetypes": ["terraform"],
            "initializationOptions": {}
        },
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod"],
            "filetypes": ["go"]
        },
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": ["dockerfile"],
            "args": ["--stdio"]
        },
        "lua": {
            "command": "lua-lsp",
            "filetypes": ["lua"]
        }
	}
}
